function completion_alias_wrapper() {
    # ex: completion_alias_wrapper kgns 'get ns'
    [[ "$#" == 2 ]] || return 1
    local alias_name="$1"
    local alias_arguments="$2"
    local num_alias_arguments=$(echo "$alias_arguments" | wc -w)

    local completion_function="__start_kubectl"

    local wrapper_name="alias_completion::${alias_name}"
    eval "
    function ${wrapper_name}() {
      let \"COMP_CWORD+=$num_alias_arguments\"
      args=( \"${alias_arguments}\" )
      COMP_WORDS=( kubectl \${args[@]} \${COMP_WORDS[@]:1} )
      $completion_function
      }
    "
    eval "complete -o default -F $wrapper_name $alias_name"
}

